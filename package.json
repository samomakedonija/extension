{
  "name": "samo-makedonija",
  "scripts": {
    "postinstall": "(cd node_modules/firebase && cp firebase-app.js firebase-remote-config.js ../../vendor/) && npm run sass",
    "sass": "sass --no-source-map src",
    "dist": "npm run reset && npm i && npm test && npm run dist:copy && npm run dist:zip",
    "dist:copy": "rsync -r --exclude-from 'dist-exclude' manifest.json src vendor dist",
    "dist:zip": "(cd dist && zip -r ../dist-$(node -e 'process.stdout.write(require(`./manifest.json`).version);').zip .)",
    "reset": "rm -rf node_modules src/**/*.css dist dist-*.zip",
    "test": "jasmine --config=jasmine.json"
  },
  "devDependencies": {
    "esm": "^3.2.25",
    "firebase": "^7.4.0",
    "jasmine": "^3.5.0",
    "jasmine-spec-reporter": "^4.2.1"
  }
}
